<nav class="pagination-nav" aria-label="{{ label }}">
  <ul class="pagination">
    {% if pagination.previous %}
    <li class="page-item page-item-prev">
      <a class="page-link" href="?p={{ pagination.previous }}">Previous</a>
    </li>
    {% else %}
    <li class="page-item page-item-prev disabled">
      <a class="page-link">Previous</a>
    </li>
    {% endif %}
    {% for page in 1..pagination.pages %}
    <li class="page-item">
      <a
        {% if pagination.active(page) %}
        class="page-link active" aria-current="page"
        {% else %}
        class="page-link"
        {% endif %}
        href="?p={{ page }}">{{ page }}</a>
    </li>
    {% endfor %}
    {% if pagination.next %}
    <li class="page-item page-item-next">
      <a class="page-link" href="?p={{ pagination.next }}">Next</a>
    </li>
    {% else %}
    <li class="page-item page-item-next disabled">
      <a class="page-link">Next</a>
    </li>
    {% endif %}
  </ul>
</nav>
